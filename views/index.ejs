<!DOCTYPE html>
<html lang="en">
    <%- include("partials/header.ejs")%>
<body>
    <%- include("partials/navbar.ejs")%>
    <div class="container">
        <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
            <h1>Perguntas</h1>
            <p>Clique aqui para realizar alguma pergunta </p><a href="/perguntar" class="btn btn-primary">Perguntar</a>
        </div>
       <% perguntas.forEach(pergunta => { %>
        </br>
        <div class="card">
            <div class="card-body">
                <h3><%=pergunta.id%>) - <%= pergunta.titulo %></h3>
            </div>
            <div class="card-footer">
                <a href="/pergunta/<%=pergunta.id%>"><button class="btn btn-primary" >Responder</button></a>
            </div>
        </div>
       <% }) %>
    </div>
</body>
<%- include("partials/footer.ejs")%>
